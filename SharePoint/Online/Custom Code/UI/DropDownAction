<script src="https://schhs.sharepoint.com/sites/infowise/SiteAssets/jQuery/jquery-1.9.1.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {

	$("select[title='Colors']").change(function () {

		var elem = $("select[title='Colors']");
		$("textarea[title='Description']").val(elem[0].value);
		
	});		
    });
</script>